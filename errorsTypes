'On Error GoTo [errorHandler]
Public Sub errorHandler()

    On Error GoTo errorHandler
 
    Dim x As Long, y As Long
 
    x = 6
    y = 6 / 0
    x = 7

done:

    Exit Sub
  
errorHandler:

    MsgBox "The following error occurred: " & Err.Description
 
End Sub



'On Error GoTo -1
Public Sub twoErrors()

    On Error GoTo errorHandler
        
    'generates "type mismatch" error
    Error (13)

done:

    Exit Sub

errorHandler:

    'clears error
    On Error GoTo -1
    
    On Error GoTo errorHandler

    'generates "Application-defined" error
    Error (1034)

    Exit Sub

errorHandlerOther:

    Debug.Print "errorHandler " & Err.Description

End Sub



'On Error Resume Next
Private Sub multipleErrors()

    On Error Goto errorHandler
    
    Dim i As Long

    For i = 1 To 3

        'Generate type mismatch error
        Error 13

continue:
    Next i

done:
    Exit Sub

errorHandler:
    Debug.Print i, Err.Description

    'clear the error and return to the code
    Resume Next

End Sub
